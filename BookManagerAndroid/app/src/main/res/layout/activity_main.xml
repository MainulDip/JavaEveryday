<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--    <ScrollView-->
    <!--        xmlns:tools="http://schemas.android.com/tools"-->
    <!--        android:id="@+id/ScrollView"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:fillViewport="true"-->
    <!--        android:orientation="vertical"-->
    <!--        tools:ignore="MissingConstraints">-->

    <TextView
        android:id="@+id/textViewTxtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Book Manager"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/buttonAllBooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="All Books"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="@+id/textViewTxtName"
        app:layout_constraintStart_toStartOf="@+id/textViewTxtName"
        app:layout_constraintTop_toBottomOf="@+id/textViewTxtName" />

    <Button
        android:id="@+id/buttonReading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Reading"
        app:layout_constraintEnd_toEndOf="@+id/buttonAllBooks"
        app:layout_constraintStart_toStartOf="@+id/buttonAllBooks"
        app:layout_constraintTop_toBottomOf="@+id/buttonAllBooks" />

    <Button
        android:id="@+id/buttonReadAlready"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:text="Already Read"
        app:layout_constraintEnd_toEndOf="@+id/buttonReading"
        app:layout_constraintStart_toStartOf="@+id/buttonReading"
        app:layout_constraintTop_toBottomOf="@+id/buttonReading" />

    <Button
        android:id="@+id/buttonWantToRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Wishlist"
        app:layout_constraintEnd_toEndOf="@+id/buttonReadAlready"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/buttonReadAlready"
        app:layout_constraintTop_toBottomOf="@+id/buttonReadAlready" />

    <Button
        android:id="@+id/buttonFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Favourite Book"
        app:layout_constraintEnd_toEndOf="@+id/buttonWantToRead"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="@+id/buttonWantToRead"
        app:layout_constraintTop_toBottomOf="@+id/buttonWantToRead" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="7dp"
        android:src="@mipmap/maishiranuie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Developed By ...."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="About"
        app:layout_constraintEnd_toEndOf="@+id/buttonFavourite"
        app:layout_constraintStart_toStartOf="@+id/buttonFavourite"
        app:layout_constraintTop_toBottomOf="@+id/buttonFavourite" />

    <!--    </ScrollView>-->
</androidx.constraintlayout.widget.ConstraintLayout>

